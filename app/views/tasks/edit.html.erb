<%= render 'shared/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-12 col-sm-4 col-sm-offset-4">
      <div class="form">
        <h1>Edit Task</h1>
          <%= simple_form_for @task do |f| %>
            <%= f.error_notification %>
                    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <div class="form-label-group">
              <div class="form-inputs">
                <%= f.input :title %>
              </div>
            </div>
            <div class="form-inputs">
              <%= f.input :details %>
            </div>
            <div class="form-inputs">
              <%= f.label :completed, "Completed:  " %>
              <%= f.check_box :completed %>
            </div>

            <div class="form-actions d-flex justify-content-center m-3">
              <%= f.button :submit, class: 'btn btn-primary confirm'%>
            </div>
          <% end %>

          <%= link_to 'Back', :back, class: "btn btn-outline-dark btn-block" %>
      </div>
    </div>
  </div>
</div>
