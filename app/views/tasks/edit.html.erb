<h1>Edit Task</h1>
<%= form_for @task do |f| %>
  <%= f.label :title, "Enter a title" %>
  <%= f.text_field :title %>

  <%= f.label :details, "Enter a details" %>
  <%= f.text_field :details %>

  <%= f.label :completed, "Completed" %>
  <%= f.check_box :completed %>

  <%= f.submit %>
<% end %>

<%= link_to "Back to list", tasks_path %>
